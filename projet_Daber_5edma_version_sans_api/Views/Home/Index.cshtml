@model IEnumerable<projet_Daber_5edma_version_sans_api.Models.JobOffer>

@{
    ViewData["Title"] = "Index";
}


<h1>Home-Index</h1>

<!-- Adding bootstrap here -->
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Daber 5edma</h1>
        <p>
            <a asp-controller="Companies" asp-action="Index" class="btn btn-primary my-2">Company</a>
            <a asp-controller="Candidats" asp-action="Login" class="btn btn-secondary my-2">Candidat</a>
        </p>
    </div>
</section>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text"><span>Description:  </span>@item.Description</p>
                    <p class="card-text"><span>Speciality:  </span>@item.Speciality</p>
                    <p class="card-text"><span>CompanyId:  </span>@item.CompanyId</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="JobOffers" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

